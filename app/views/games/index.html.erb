<% content_for :page_title,  "Index" %>

<h1>Welcome to the game of set!</h1>

<h2>Here are your games in progress</h2>
<ul>
  <% @games.each do |game| %>
    <li>
      <%= link_to ('Game ' + game.id.to_s + ' Score: ' + game.score.to_s), game  %>
    </li>
  <% end %>
</ul>

<h2>Or you can create a new game</h2>
<%= link_to 'new Game', :controller => 'games', :action => 'new' %>